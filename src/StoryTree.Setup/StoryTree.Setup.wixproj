<Project>
  <Import Project="Sdk.props" Sdk="WixToolset.Sdk" Version="5.0.2" />
  <PropertyGroup>
    <OutputName>Verhalenboom Setup ($(ReleaseVersion))</OutputName>
    <ReleaseVersion>0.1.1.1</ReleaseVersion>
    <OutputName>Verhalenboom Setup ($(ReleaseVersion))</OutputName>
