<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:StoryTree.Gui.ViewModels">

    <DataTemplate x:Key="ClassEstimationTemplate" DataType="{x:Type viewModels:ClassesProbabilitySpecificationViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" HorizontalContentAlignment="Left" FontWeight="Bold" Content="Gemiddelde"/>
            <DataGrid Grid.Row="1" ItemsSource="{Binding MeanEstimationsList}" Style="{StaticResource DataGridStyle}"/>

            <Label Grid.Row="2" HorizontalContentAlignment="Left" FontWeight="Bold" Content="Ondergrens"/>
            <DataGrid Grid.Row="3" ItemsSource="{Binding MinEstimationsList}" Style="{StaticResource DataGridStyle}"/>

            <Label Grid.Row="4" HorizontalContentAlignment="Left" FontWeight="Bold" Content="Bovengrens"/>
            <DataGrid Grid.Row="5" ItemsSource="{Binding MaxEstimationsList}" Style="{StaticResource DataGridStyle}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>