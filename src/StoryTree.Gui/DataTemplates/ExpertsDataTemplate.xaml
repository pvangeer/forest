<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:StoryTree.Gui.ViewModels">
    <DataTemplate
    x:Key="ExpertsDataTemplate" 
    DataType="viewModels:ProjectViewModel">
        <Grid>
            <DataGrid ItemsSource="{Binding Experts}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naam" Binding="{Binding Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Organisatie" Binding="{Binding Organisation}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Expertise" Binding="{Binding Expertise}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Telefoon" Binding="{Binding Telephone}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>