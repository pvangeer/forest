<UserControl x:Class="StoryTree.Gui.EventTreeControl.EventTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoryTree.Gui.EventTreeControl"
             xmlns:viewModels="clr-namespace:StoryTree.Gui.ViewModels"
             xmlns:controls="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:EventTreeViewModel/>
    </UserControl.DataContext>
    <controls:ZoomControl>
        <local:EventTreeGraphLayout Graph="{Binding Graph}"/>
    </controls:ZoomControl>
</UserControl>
