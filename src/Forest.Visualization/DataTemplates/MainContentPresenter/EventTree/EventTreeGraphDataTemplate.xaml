<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mainContentPanel="clr-namespace:Forest.Visualization.ViewModels.MainContentPanel"
                    xmlns:controls="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions"
                    xmlns:eventTree="clr-namespace:Forest.Visualization.DataTemplates.MainContentPresenter.EventTree">
    <DataTemplate DataType="{x:Type mainContentPanel:EventTreeMainContentViewModel}" x:Key="EventTreeGraphDataTemplate">
        <controls:ZoomControl ZoomDeltaMultiplier="5">
            <controls:ZoomControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary
                            Source="/Forest.Visualization;component/DataTemplates/MainContentPresenter/EventTree/EdgeControlTemplate.xaml" />
                        <ResourceDictionary
                            Source="/Forest.Visualization;component/DataTemplates/MainContentPresenter/EventTree/VertexControlTemplate.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </controls:ZoomControl.Resources>
            <eventTree:EventTreeGraphLayout Graph="{Binding Graph}" />
        </controls:ZoomControl>

    </DataTemplate>
</ResourceDictionary>